inv_con_rescaling <- function(richness, min_r, max_r, min_res, max_res) {
  return(((max_r - richness) / (max_r - min_r)) * (max_res - min_res) + min_res)
}

rli_raster$conductance <- inv_con_rescaling(values(rli_raster), 
                                          min_r, max_r, 
                                          min_scale, max_scale)

