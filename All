  aoh_raster <- rast(file)
  
  aoh_raster <- resample(aoh_raster, AOH_richness, method = "near")
  
  aoh_raster[is.na(aoh_raster)] <- 0
  
  AOH_richness <- AOH_richness + aoh_raster
  
  rm(aoh_raster)
  gc()
}

